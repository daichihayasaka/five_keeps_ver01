<% provide(:title, t('.title')) %>
<div class="form-container">
  <section class="logo form">
    <%= link_to image_tag("5keeps.png", alt: "logo"), root_path %>
  </section>

  <section class="form-main">
    <h1><%= t('.h1') %></h1>
    <%= form_with(url: login_path, scope: :session, local: true, class: "user-form") do |f| %>
      <div>
        <%= f.label :email, t('helpers.label.email') %>
        <%= f.email_field :email, class: 'form-control'  %>
      </div>
      <div>
        <%= f.label :password, t('helpers.label.password') %>
        <%= f.password_field :password, class: 'form-control forgot-password'  %>
      </div>
      <%= link_to t('.forgot_password'), new_password_reset_path, class: "forgot-password" %>
      <%= f.label :remember_me, class: "checkbox" do %>
        <%= f.check_box :remember_me %>
        <span><%=t('.remember_me')  %></span>
      <% end %>
      <%= f.submit t('.button'), class: "button" %>
    <% end %>
    <div class="link-to-signup">
      <p><%= t('.message_to_signup') %> <%= link_to t('.link_to_signup'), signup_path %></p>
    </div>
  </section>

  <%= render 'static_pages/footer' %>
</div>
