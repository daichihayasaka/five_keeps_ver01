<% provide(:title, t('.title')) %>
<div class="form-container">
  <section class="logo form">
    <%= link_to image_tag("5keeps.png", alt: "logo"), root_path %>
  </section>

  <section class="form-main">
    <h1><%= t('.h1') %></h1>
    <%= form_with(url: password_resets_path, scope: :password_reset, local: true, class: "user-form") do |f| %>
      <div>
        <%= f.label :email, t('helpers.label.email') %>
        <%= f.email_field :email, class: 'form-control'  %>
      </div>
      <%= f.submit t('.button'), class: "button" %>
    <% end %>
  </section>

  <%= render 'static_pages/footer' %>
</div>
